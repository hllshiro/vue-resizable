{
  "name": "@hllshiro/vue-resizable",
  "version": "0.0.4",
  "type": "module",
  "main": "./dist/vue-resizable.umd.js",
  "module": "./dist/vue-resizable.es.js",
  "types": "./dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/vue-resizable.es.js",
      "require": "./dist/vue-resizable.umd.js"
    },
    "./style.css": "./dist/vue-resizable.css",
    "./dist/style.css": "./dist/vue-resizable.css"
  },
  "description": "A Vue 3 resizable components library",
  "keywords": [
    "vue",
    "vue3",
    "resizable",
    "components",
    "ui"
  ],
  "author": "hllshiro",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hllshiro/vue-resizable"
  },
  "scripts": {
    "dev": "pnpm --dir demo run dev",
    "build": "vue-tsc -b && vite build",
    "build:types": "vue-tsc -b",
    "build:lib": "vite build",
    "preview": "pnpm --dir demo run preview",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "vue": "^3.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.18.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/tsconfig": "^0.7.0",
    "typescript": "~5.8.3",
    "vite": "^7.1.4",
    "vite-plugin-dts": "^4.5.4",
    "vue": "^3.5.21",
    "vue-tsc": "^3.0.6"
  }
}
