{
  "name": "@hllshiro/vue-resizable",
  "version": "0.0.1",
  "type": "module",
  "main": "./dist/vue-resizable.umd.js",
  "module": "./dist/vue-resizable.es.js",
  "types": "./dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/vue-resizable.es.js",
      "require": "./dist/vue-resizable.umd.js"
    },
    "./dist/style.css": "./dist/style.css"
  },
  "description": "A Vue 3 resizable components library",
  "keywords": [
    "vue",
    "vue3",
    "resizable",
    "components",
    "ui"
  ],
  "author": "hllshiro",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hllshiro/vue-resizable"
  },
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc -b && vite build",
    "build:types": "vue-tsc -b",
    "build:lib": "vite build",
    "preview": "vite preview",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "vue": "^3.0.0"
  },
  "devDependencies": {
    "vue": "^3.5.13",
    "@types/node": "^22.13.4",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vue/tsconfig": "^0.7.0",
    "typescript": "~5.7.2",
    "vite": "^6.1.0",
    "vite-plugin-dts": "^4.5.0",
    "vue-tsc": "^2.2.0"
  }
}
